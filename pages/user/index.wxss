page {
  background-color: #edece8;
  color: #666;
}
.userinfo_wrap {
  height: 40vh;
  background-color: #fff;
}
.userinfo_wrap .logined {
  position: relative;
  width: 100%;
  height: 100%;
}
.userinfo_wrap .logined .userinfo_bg {
  height: 100%;
  filter: blur(30rpx);
}
.userinfo_wrap .logined .userinfo_middle {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 100%;
  height: 150rpx;
  transform: translate(-50%, -50%);
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.userinfo_wrap .logined .userinfo_middle image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.userinfo_wrap .logined .userinfo_middle .userinfo_name {
  width: 100%;
  text-align: center;
  color: #fff;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.userinfo_wrap .no_login {
  height: 100%;
  background-color: var(--themeColor);
  display: flex;
  justify-content: center;
  align-items: center;
}
.userinfo_wrap .no_login button {
  font-weight: normal;
  width: 200rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2rpx solid #e5e5e5;
  border-radius: 15rpx;
}
.bottom_wrap {
  position: relative;
  width: 100%;
}
.bottom_wrap .actions_wrap {
  position: absolute;
  left: 0;
  top: -40rpx;
  width: 100%;
  padding: 0 20rpx;
}
.bottom_wrap .actions_wrap .pulic_title {
  background-color: #fff;
  margin-bottom: 2rpx;
  padding: 18rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.bottom_wrap .actions_wrap .histroy_wrap {
  display: flex;
  background-color: #fff;
}
.bottom_wrap .actions_wrap .histroy_wrap .history_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  padding: 20rpx 0;
}
.bottom_wrap .actions_wrap .histroy_wrap .history_item view {
  flex: 1;
}
.bottom_wrap .actions_wrap .histroy_wrap .history_item .number {
  color: var(--themeColor);
}
.bottom_wrap .actions_wrap .user_order_wrap {
  margin: 20rpx 0;
}
.bottom_wrap .actions_wrap .user_order_wrap .order_content {
  display: flex;
  background-color: #fff;
  padding: 20rpx 0;
}
.bottom_wrap .actions_wrap .user_order_wrap .order_content .order_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.bottom_wrap .actions_wrap .user_order_wrap .order_content .order_item .iconfont {
  font-size: 32rpx;
  color: var(--themeColor);
}
.bottom_wrap .actions_wrap .address_wrap {
  margin: 0;
}
.bottom_wrap .actions_wrap .other_wrap {
  margin: 20rpx 0;
}
.bottom_wrap .actions_wrap .share_wrap {
  margin-bottom: 20rpx;
}
