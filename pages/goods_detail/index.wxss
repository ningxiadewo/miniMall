swiper {
  width: 100vw;
  height: 70vw;
}
swiper swiper-item {
  display: flex;
  justify-content: center;
  width: 100%;
}
swiper swiper-item image {
  width: 70%;
}
.goods_info .price {
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
}
.goods_info .info_wrap {
  display: flex;
}
.goods_info .info_wrap .name {
  flex: 8;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding: 0 20rpx;
  border-right: 5rpx solid #e5e5e5;
}
.goods_info .info_wrap .collect {
  flex: 2;
  display: flex;
  font-size: 28rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.goods_detail .title {
  padding: 15rpx;
  font-size: 36rpx;
  font-weight: 600;
  border-top: 10rpx solid #e5e5e5;
  border-bottom: 10rpx solid #e5e5e5;
  color: var(--themeColor);
}
.btn_tools {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  width: 100%;
}
.btn_tools .tools-item {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  font-size: 24rpx;
  padding: 20rpx 0;
  position: relative;
}
.btn_tools .tools-item button {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btn_tools .btn_cart {
  flex: 3;
  background-color: #ffa500;
  color: #fff;
}
.btn_tools .btn_buy {
  flex: 3;
  background-color: var(--themeColor);
  color: #fff;
}
